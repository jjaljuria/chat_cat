{{#contentFor "styles"}}
	<link rel="stylesheet" href="chat.css">
{{/contentFor}}

<div class="container-fluid min-vh-100">
	<header class="row border align-items-center height-header" >
		<section class="cal-12 col-sm-4 col-md-4 border-end">
			<h3 class="text-truncate">{{user.nickname}}</h3>
		</section>
	</header>

	<div class="row height-chat">
		<aside class="col-12 col-sm-4 col-md-4 border">
		Conversaciones: <br/>
			<ul>
			{{#each conversations as |conversation|}}
				{{#each conversation.users as |users|}}
					{{#each users as |user|}}
						<li>
							{{user.nickname}}
						</li>		
					{{/each}}
				{{/each}}
			{{/each}}
			</ul>
		</aside>

		<section class="col-12 col-sm-8 border d-none d-sm-block">

			{{> logout}}
			
		</section>
	</div>




	

{{#contentFor "scripts"}}
	<script src="/socket.io/socket.io.js"></script>
	<script src="/chat.js" type="text/javascript"></script>
{{/contentFor}}